<Window x:Class="LineageLauncher.App.Views.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Create Account"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Create New Account"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                      HorizontalAlignment="Center" />
            <TextBlock Text="Fill in the details below to create your account"
                      FontSize="12"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      HorizontalAlignment="Center"
                      Margin="0,8,0,0" />
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <!-- Username -->
            <TextBox x:Name="UsernameTextBox"
                    FontSize="14"
                    Height="48"
                    Padding="12,14"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,16"
                    ui:ControlHelper.PlaceholderText="Username (alphanumeric, @, .)" />

            <!-- Password -->
            <PasswordBox x:Name="PasswordBox"
                        FontSize="14"
                        Height="48"
                        Padding="12,14"
                        VerticalContentAlignment="Center"
                        Margin="0,0,0,16"
                        ui:ControlHelper.PlaceholderText="Password (6-20 chars, letters + numbers)" />

            <!-- Confirm Password -->
            <PasswordBox x:Name="ConfirmPasswordBox"
                        FontSize="14"
                        Height="48"
                        Padding="12,14"
                        VerticalContentAlignment="Center"
                        Margin="0,0,0,16"
                        ui:ControlHelper.PlaceholderText="Confirm Password" />

            <!-- Phone (Optional) -->
            <TextBox x:Name="PhoneTextBox"
                    FontSize="14"
                    Height="48"
                    Padding="12,14"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,16"
                    Text="-"
                    ui:ControlHelper.PlaceholderText="Phone (optional, enter - for none)" />

            <!-- Status Message -->
            <TextBlock x:Name="StatusTextBlock"
                      FontSize="13"
                      Foreground="{DynamicResource SystemControlErrorTextForegroundBrush}"
                      TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,16" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Width="100"
                   Height="36"
                   Margin="0,0,12,0" />

            <Button Content="Create Account"
                   Click="CreateButton_Click"
                   x:Name="CreateButton"
                   Style="{StaticResource AccentButtonStyle}"
                   Width="140"
                   Height="36" />
        </StackPanel>
    </Grid>
</Window>
